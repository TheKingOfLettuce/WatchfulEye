<Window x:Class="WatchfulEye.Server.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchfulEye.Server.App"
        xmlns:components="clr-namespace:WatchfulEye.Server.App.Components"
        mc:Ignorable="d"
        Title="MainWindow" Height="950" Width="1650"
        Background="DarkSlateBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <components:EyeSocketDisplay Width="800" Height="450" x:Name="Socket1" Margin="10"/>
        <components:EyeSocketDisplay Grid.Row="1" Grid.Column="0" Width="800" Height="450" x:Name="Socket2" Margin="10"/>
        <components:EyeSocketDisplay Grid.Row="0" Grid.Column="1" Width="800" Height="450" x:Name="Socket3" Margin="10"/>
        <components:EyeSocketDisplay Grid.Row="1" Grid.Column="1" Width="800" Height="450" x:Name="Socket4" Margin="10"/>
    </Grid>
</Window>
