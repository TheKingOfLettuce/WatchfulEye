            "args": ["TestEye"],
            "cwd": "${workspaceFolder}/WatchfulEye.Client",
            "console": "externalTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Run 2nd Client",
            "type": "coreclr",
            "request": "launch",
