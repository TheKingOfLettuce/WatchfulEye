            "preLaunchTask": "BuildServerApp",
            "program": "${workspaceFolder}/WatchfulEye.Server.App/bin/Debug/net7.0-windows/WatchfulEye.Server.App.exe",
            "args": [],
            "cwd": "${workspaceFolder}/WatchfulEye.Server",
            "console": "externalTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Run Client",
            "type": "coreclr",
